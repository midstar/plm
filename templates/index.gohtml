<html>
  <head>
    <title>Process Load Monitor</title>
    <style>
    body {    
      margin: 0;
      padding: 0;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      font-size: 14px;
      line-height: 1.42857143;
      background-color: #F6F6F6;
    }
    
    .top-header {
      background: linear-gradient(#00285c, rgba(69, 157, 238, 0.75));
      height: 25px;
      margin-top: 0px;
      margin-left: 0px;
      margin-right: 0px;
      margin-bottom: 10px;
      border-color: #080808;
      border-width: 0 0 1px;
      top: 0;
      right: 0;
      left: 0;
      box-sizing: border-box;
    }
    
    .title-info {
      text-align: center;
      font-size: 16px;
      text-transform: uppercase;
      letter-spacing: 10px;
      color: white;
      padding-top: 1px;
    }

    .panel {
      background-color: #FFFFFF;
      margin-top: 5px;
      margin-left: 10px;
      margin-right: 10px;
      margin-bottom: 10px;
      border-style: solid;
      border-color: #3175B0;
      border-width: 1px;
      border-radius:3px 3px 0px 0px;
    }

    .panel-header {
      background-color: #3175B0;
      height: 20px;
      margin-top: 0px;
      margin-left: 0px;
      margin-right: 0px;
      margin-bottom: 5px;
    }

    .panel-text {
      margin-left: 30px;
      color: white;
    }

    table {
      border-collapse: collapse;
      table-layout: fixed;
      word-wrap: break-word;
      text-align: left;
      width: 100%;
      margin-left: 5px;
      margin-right: 5px;
    }

    button {
      background: #3498db;
      background-image: -webkit-linear-gradient(top, #3498db, #2980b9);
      background-image: -moz-linear-gradient(top, #3498db, #2980b9);
      background-image: -ms-linear-gradient(top, #3498db, #2980b9);
      background-image: -o-linear-gradient(top, #3498db, #2980b9);
      background-image: linear-gradient(to bottom, #3498db, #2980b9);
      -webkit-border-radius: 10;
      -moz-border-radius: 10;
      border-radius: 10px;
      font-family: Arial;
      color: #ffffff;
      font-size: 12px;
      padding: 5px 10px 5px 10px;
      text-decoration: none;
    }

    button:hover {
      background: #3cb0fd;
      background-image: -webkit-linear-gradient(top, #3cb0fd, #3498db);
      background-image: -moz-linear-gradient(top, #3cb0fd, #3498db);
      background-image: -ms-linear-gradient(top, #3cb0fd, #3498db);
      background-image: -o-linear-gradient(top, #3cb0fd, #3498db);
      background-image: linear-gradient(to bottom, #3cb0fd, #3498db);
      text-decoration: none;
    }
    </style>
    <script>
    function filter() {
      var searchtext = document.getElementById("searchinput").value;
      var tables = document.getElementsByClassName("process-table");
      for(var tableIndex = 0; tableIndex < tables.length ; tableIndex++) {
        var table = tables[tableIndex];
        var rows = table.rows;
        for(var rowIndex=1; rowIndex < rows.length ; rowIndex++) {
          var row = rows[rowIndex];
          var hideRow = true;
          var cells = row.cells;
          for (var cellIndex=0; cellIndex < cells.length; cellIndex++) {
            var cell = cells[cellIndex];
            if (cell.innerText.includes(searchtext)) {
              hideRow = false;
              break;
            }
          }
          row.style.display = hideRow ? "none" : "table-row";
        }
      }
    }

    function plot() {
      var selectedUIDs = [];
      var tables = document.getElementsByClassName("process-table");
      for(var tableIndex = 0; tableIndex < tables.length ; tableIndex++) {
        var table = tables[tableIndex];
        var rows = table.rows;
        for(var rowIndex=1; rowIndex < rows.length ; rowIndex++) {
          var row = rows[rowIndex];
          var cells = row.cells;
          var checkbox = cells[0].children[0];
          if (checkbox.checked) {
            var uid = cells[1].innerText;
            selectedUIDs.push(uid);
          }
        }
      }
      console.log("Checked: " + selectedUIDs);
      if (selectedUIDs.length == 0) {
        alert("No processes has been selected.\nPlease check the processes to plot.");
      } else {
        window.open(window.location.href + "/plot?uids=" + selectedUIDs);
      }
    }
    </script>
  </head>
  <body>
    <div class="top-header">
      <div class="title-info">
      PROCESS LOAD MONITOR {{.Version}}
      </div>
    </div>
    
    <div class="panel">
      <div class="panel-header">
        <div class="panel-text">
        Overview
        </div>
      </div>
      <div class="panel-content">
        <table>
          <col width="400">
          <col>
          <col width="200">
          <col>
          <col width="200">
          <col width="10">
          <col width="100">
          <col width="20">
          <tr>
            <td>
              <table style="text-align:center;">
                <tr>
                  <th colspan="4">
                  PHYSICAL MEMORY
                  </th>
                </tr>
                <tr>
                  <th>Total</th>
                  <th>Last</th>
                  <th>Max</th>
                  <th>Min</th>
                </tr>
                <tr>
                  <td>{{kb_to_mb .PM.Phys.TotalPhys}} MB</td>
                  <td>{{kb_to_mb .PM.Phys.LastPhys}} MB</td>
                  <td>{{kb_to_mb .PM.Phys.MaxPhysEver}} MB</td>
                  <td>{{kb_to_mb .PM.Phys.MinPhysEver}} MB</td>
                </tr>
              </table>
            </td>
            <td>
            </td>
            <td>
              <table style="text-align:center;">
                <tr>
                  <th colspan="2">
                  LOG UTILIZATION
                  </th>
                </tr>
                <tr>
                  <th>Fast</th>
                  <th>Slow</th>
                </tr>
                <tr>
                  <td>{{log_utilization .FastLogger}} %</td>
                  <td>{{log_utilization .SlowLogger}} %</td>
                </tr>
              </table>
            </td>
            <td>
            </td>
            <td>
            <div style="font-weight:bold;">
            SEARCH
            </div>
            <input type="text" id="searchinput" name="search" size="20" oninput="filter()">
            </td>
            <td></td>
            <td><button type="button" onclick="plot()">PLOT SELECTED</button></td>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
    
    <div class="panel">
      <div class="panel-header">
        <div class="panel-text">
        Running processes
        </div>
      </div>
      <div class="panel-content">
        <table class="process-table">
          <col width="25">
          <col width="60">
          <col width="60">
          <col width="200">
          <col>
          <col width="100">
          <col width="100">
          <col width="100">
          <tr>
            <th></th>
            <th>UID</th>
            <th>PID</th>
            <th>Name</th>
            <th>Command line</th>
            <th>Last</th>
            <th>Max</th>
            <th>Min</th>
          </tr>
          {{range .PM.All}}
          {{if .IsAlive}}
          <tr>
            <td><input type="checkbox"></td>
            <td>{{.UID}}</td>
            <td>{{.Pid}}</td>
            <td>{{.Name}}</td>
            <td>{{.CommandLine}}</td>
            <td>{{kb_to_mb .LastMemory}} MB</td>
            <td>{{kb_to_mb .MaxMemoryEver}} MB</td>
            <td>{{kb_to_mb .MinMemoryEver}} MB</td>
          </tr>
          {{end}}
          {{end}}
        </table>
      </div>
    </div>
    
    <div class="panel">
      <div class="panel-header">
        <div class="panel-text">
        Process graveyard
        </div>
      </div>
      <div class="panel-content">
        <table class="process-table">
          <col width="25">
          <col width="60">
          <col width="60">
          <col width="200">
          <col>
          <col width="100">
          <col width="100">
          <col width="100">
          <tr>
            <th></th>
            <th>UID</th>
            <th>PID</th>
            <th>Name</th>
            <th>Command line</th>
            <th>Last</th>
            <th>Max</th>
            <th>Min</th>
          </tr>
          {{range .PM.All}}
          {{if not .IsAlive}}
          <tr>
            <td><input type="checkbox"></td>
            <td>{{.UID}}</td>
            <td>{{.Pid}}</td>
            <td>{{.Name}}</td>
            <td>{{.CommandLine}}</td>
            <td>{{kb_to_mb .LastMemory}} MB</td>
            <td>{{kb_to_mb .MaxMemoryEver}} MB</td>
            <td>{{kb_to_mb .MinMemoryEver}} MB</td>
          </tr>
          {{end}}
          {{end}}
        </table>
      </div>
    </div>
    
  </body>
</html>